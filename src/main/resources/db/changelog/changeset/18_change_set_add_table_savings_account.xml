<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="18" author="vadim">
        <createTable tableName="saving_account">
            <column name="uuid" type="VARCHAR(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="currency" type="VARCHAR(3)"/>
            <column name="info_Of_Percent" type="VARCHAR(30)"/>
            <column name="final_sum" type="DECIMAL"/>
            <column name="deposit_term" type="SMALLINT"/>
            <column name="individual_uuid" type="VARCHAR(36)">
                <constraints nullable="false" foreignKeyName="fk_address_employee" references="individual(uuid)"/>
            </column>

        </createTable>
    </changeSet>
</databaseChangeLog>
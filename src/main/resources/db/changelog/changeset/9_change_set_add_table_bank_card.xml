<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="10" author="Vitaliy_Gerasimov">
        <createTable tableName="bank_card">
            <column name="uuid" type="VARCHAR(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="holder_name" type="VARCHAR(36)"/>
            <column name="card_number" type="VARCHAR(36)"/>
            <column name="cvv" type="INT"/>
            <column name="expiration_date" type="DATE"/>
            <column name="individual_uuid" type="VARCHAR(36)">
            <constraints nullable="false" foreignKeyName="fk_address_employee" references="individual(uuid)"/>
            </column>
            <column name="account_uuid" type="VARCHAR(36)">
                <constraints nullable="false" foreignKeyName="fk_account_bank_card" references="account(uuid)"/>
            </column>
            <column name="is_actual" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>